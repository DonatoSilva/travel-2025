---
import Layout from "../layouts/Layout.astro";
import Init from "../layouts/Section/Init.astro";
import Image from "astro/components/Image.astro";

import Where from "src/layouts/Section/Where.astro";
import Invitation from "src/layouts/Section/Invitation.astro";
import Memorys from "src/layouts/Section/Memorys.astro";
import Questions from "src/layouts/Section/Questions.astro";
import AddMemoryModal from "@components/memory/modal/addMemoryModal.astro";
---

<Layout title="Paseo 2025">
	<Init />
	<Where />
	<Memorys />
	<Questions />
	<Invitation />
</Layout>

<AddMemoryModal />

<style>
	/* Add animation to "page fraction" */
	.message {
		background-image: linear-gradient(
			-225deg,
			#1a1a1a 0%,
			#4d4d4d 29%,
			#808080 67%,
			#b3b3b3 100%
		);
		background-size: auto auto;
		background-size: 200% auto;
		color: #fff;
		background-clip: text;
		text-fill-color: transparent;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		animation: textclip 2s alternate infinite;
		display: inline-block;
	}

	@keyframes textclip {
		to {
			background-position: 200% center;
		}
	}

	@keyframes typing {
		from {
			width: 0;
		}
		to {
			width: 100%;
		}
	}

	@keyframes caret {
		from {
			border-right-color: transparent;
		}
		to {
			border-right-color: white;
		}
	}

	.gallery {
		.headerGallery {
			position: relative;
			overflow: hidden;

			&::after {
				content: "";
				@apply rounded-xl;
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				background: linear-gradient(
					to bottom,
					rgba(0, 0, 0, 0),
					rgba(0, 0, 0, 0.6)
				);
				pointer-events: none;
			}

			h2 {
				content: "Galeria";
				position: absolute;
				top: 0px;
				left: 0px;
				@apply text-white py-2 px-4 bg-orange-500 rounded-ss-xl rounded-ee-xl;
				font-size: 4rem;
				font-weight: bold;
				z-index: 13;
			}

			img {
				transition: transform 0.5s ease-in-out;
				&:hover {
					transform: scale(1.05);
				}
			}

			p {
				@apply text-white text-2xl font-bold pe-2;
				width: 0;
				max-width: fit-content;
				z-index: 10;
				overflow: hidden;
				white-space: nowrap;
				animation: typing 6s steps(52) infinite alternate forwards;
				animation-delay: 2s;

				&::after {
					content: "";
					position: absolute;
					top: 0;
					right: 0;
					width: 2px;
					height: 100%;

					border-right: 2px solid white;
					animation: caret 1s infinite;
				}
			}
		}
	}

	.message {
		background-image: linear-gradient(
			-225deg,
			#1a1a1a 0%,
			#4d4d4d 29%,
			#808080 67%,
			#b3b3b3 100%
		);
		background-size: auto auto;
		background-size: 200% auto;
		color: #fff;
		background-clip: text;
		text-fill-color: transparent;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		animation: textclip 2s alternate infinite;
		display: inline-block;
	}

	@keyframes textclip {
		to {
			background-position: 200% center;
		}
	}

	@keyframes typing {
		from {
			width: 0;
		}
		to {
			width: 100%;
		}
	}

	@keyframes caret {
		from {
			border-right-color: transparent;
		}
		to {
			border-right-color: white;
		}
	}
</style>
