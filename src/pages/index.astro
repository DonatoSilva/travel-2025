---
import Section from "src/layouts/Section.astro";
import Layout from "../layouts/Layout.astro";
import Init from "../layouts/Section/Init.astro";

import Where from "src/layouts/Section/Where.astro";
import Logo from "src/components/Logo.astro";
---

<Layout title="Paseo 2025">
	<Init />
	<Where />
	<section
		class="bg-orange-100 text-black flex flex-col gap-24 justify-center invitation"
	>
		<div
			class="flex flex-col items-center justify-center w-full max-w-xl min-h-16 mx-auto [&>span]:text-8xl [&>span]:font-bold [&>span]:text-orange-700 title"
		>
			<span class="first">¿</span>
			<div class="text-center">
				<h3 class="text-5xl text-balance font-extrabold">Quieres hacer parte</h3>
			</div>
			<span class="last">?</span>
		</div>
		<div class="flex flex-col gap-8">
			<p class="text-md text-balance text-center h-fit">
				Suscribete, y vive una experiencia con amigos sobre ruedas visiando partes del pais
			</p>
			<div
				class="flex flex-col sm:flex-row items-center justify-center h-content gap-4"
			>
				<input
					type="text"
					placeholder="Ingresa tu correo"
					class="min-h-10 w-full max-w-[500px] px-4 rounded-md"
				/>
				<button
					type="button"
					class="transition duration-600 px-4 py-2 w-full sm:w-fit rounded-md bg-orange-600 text-white hover:bg-orange-100 hover:text-orange-600 hover:font-semibold hover:border-2 hover:border-orange-600 border-box"
					>Suscribir</button
				>
			</div>
		</div>
	</section>
	<footer
		class="min-h-[100px] bg-orange-400 flex flex-col justify-center items-center gap-4 py-11"
	>
		<div class="flex flex-col items-center">
			<h1 class="text-4xl text-center font-semibold">
				Aventuras de 2025
			</h1>
			<Logo />
		</div>
		<div class="flex flex-col">
			<p class="text-orange-50 text-sm">
				Todos los derechos reservados © 2025
			</p>
			<a
				href="https://github.com/DonatoSilva"
				class="w-full text-orange-100 text-center text-sm underline"
				>Creado por Donato silva</a
			>
		</div>
	</footer>
</Layout>

<style>
	.invitation {
		padding: 30px 55px;

		.title {
			display: flex;
			flex-direction: row;
			@apply gap-4;
		}
	}
</style>
